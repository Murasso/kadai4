<% if user_signed_in? %>
    <div class='col-md-3'>
    <h1>User info</h1>
    <div>
      <table class='table'>
        <tr><%= image_tag current_user.get_profile_image(100,100) %></tr>
        <tr>
      	  <th>name</th>
      	  <th><%= current_user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= current_user.introduction %></th>
        </tr>
      </table>
     <%= link_to edit_user_path(User.find(current_user.id)), class:"btn btn-outline-secondary btn-block" do%>
      <i class="fas fa-user-cog"></i>
     <% end %>     
     <h1 class="mt-3">New book</h1>
    <%= form_with model: Book.new, method: :post do |f| %>
      <div class="form-group">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <h4>Opinion</h4>
        <%= f.text_area :body %>
      </div>
      <%= f.submit 'Create Book',class:"btn btn-success" %>
    <% end %>
    </div>
     </div>   
   
  <% end %>